{
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {}
    },
    {
      "src": "server/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/server/api.ts",
      "methods": ["GET", "PUT", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Methods": "GET,PUT",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
      "src": "/webhooks",
      "dest": "/server/webhooks.ts",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Methods": "POST",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ]
}
